# Definición de la función calcular_descuento
def calcular_descuento(monto_total, porcentaje_descuento=10):
    descuento = monto_total * (porcentaje_descuento / 100)
    return descuento

# Programa principal
def main():
    # Primera llamada: Solo monto total (se usará el descuento por defecto)
    monto1 = 100.0
    descuento1 = calcular_descuento(monto1)
    monto_final1 = monto1 - descuento1
    print(f"Monto total: ${monto1}, Descuento aplicado: ${descuento1}, Monto final a pagar: ${monto_final1}")

    # Segunda llamada: Monto total y porcentaje de descuento personalizados
    monto2 = 200.0
    porcentaje_descuento2 = 15
    descuento2 = calcular_descuento(monto2, porcentaje_descuento2)
    monto_final2 = monto2 - descuento2
    print(f"Monto total: ${monto2}, Descuento aplicado: ${descuento2}, Monto final a pagar: ${monto_final2}")

# Ejecuta el programa principal
if __name__ == "__main__":
    main()
